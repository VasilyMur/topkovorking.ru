mixin paginationMetro(page, pages, tag)
  .pagination
    .pagination__prev
      if page > 1
        a(href=`/metro/${tag}/page/${page - 1}`) Назад
    .pagination__text
      p Страница #{page} из #{pages}
    .pagination__next
      if page < pages
        a(href=`/metro/${tag}/page/${parseFloat(page) + 1}`) Вперед
